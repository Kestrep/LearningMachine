{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Edit Card
    {% elseif not edit %}
        New Card
    {% endif %}
{% endblock %}

{% block body %}
<main>
    <h1>
    {% if edit %}
        Modifier une carte
    {% elseif not edit %}
        Créer une carte
    {% endif %}
    </h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="buttons d-cc">
            <div class="btn-darkgrey">Revenir</div>
            <button class="btn-orange submit-button">
                {% if edit %}
                    Modifier
                {% elseif not edit %}
                    Créer
                {% endif %}
            </button>
        </div>
    {{ form_end(form) }}

    {# <div class="debug">
        <input type="text" name="" id="loremCopy-WordsCount" value="52">
        <div class="btn-orange loremCopy-Button" data-count="loremCopy-WordsCount">Copie Lorem</div>
        <div class="btn-orange request-new-button">New Card</div>
    </div> #}

    <a href="{{ path('card_index') }}">back to list</a>

    {% if edit %}
        <form method="post" action="{{ path('card_delete', {'id': card.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ card.id) }}">
            <button class="btn">Delete</button>
        </form>
    {% endif %}
</main>

{% endblock %}