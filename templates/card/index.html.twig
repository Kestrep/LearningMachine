{% extends 'base.html.twig' %}

{% block title %}Card index{% endblock %}
{% block body %}
<main>
    <section class="header">
        <h1>Vue d'ensemble</h1>
        <div class="info-scroll">
            Plusieurs cartes apprises ici
        </div>
    </section>
    <section class="main">
        {% set subcategory = "" %}
        {% set category = "" %}
        {% for card in cards %}

            {% if card.subcategory.id != subcategory %}
                <div class="card-breadcrumb">
                    <div class="domain"><div class="square"></div>{{ card.subcategory.category.name }}</div>
                    <div class="subdomain"><div class="square"></div>{{ card.subcategory.name }}</div>
                </div>
                {% set subcategory = card.subcategory.id %}
                {% set category = card.subcategory.category.id %}
            {% endif %}

            <div class="card-side">
                <nav class="menu-inside f-ec">
                    <div class="stage-icons f-ce">
                        <i class="icon-star-fill"></i>
                        <i class="icon-star-fill"></i>
                        <i class="icon-star-empty"></i>
                    </div>
                    <div class="edit-icons f-cc"><i class="icon-closed-eye"></i></div>
                    <a href="{{ path('card_edit', {'id': card.id}) }}" class="edit-icons f-cc"><i class="icon-feather"></i></a>
                </nav>
                <div class="front-ctnt">
                    <div class="main-ctnt">{{ card.frontMainContent}}</div>
                    <div class="sub-ctnt">{{ card.frontSubcontent}}</div>
                </div>
                <div class="separator"></div>
                <div class="back-ctnt">
                    <div class="main-ctnt">{{ card.backMainContent}}</div>
                    <div class="sub-ctnt">{{ card.backSubcontent}}</div>
                </div>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}




